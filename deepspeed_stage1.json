{
    "bf16": {
   "enabled": true
 },
    "fp16": {
        "enabled": false,
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "initial_scale_power": 16,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "optimizer": {
        "type": "AdamW",
        "params": {
        "lr": 1e-4,
        "weight_decay": 1e-5
        }
    },
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "warmup_min_lr": 1e-5,
            "warmup_max_lr": 1e-4,
            "warmup_num_steps":3200,
            "total_num_steps": 32000  
        }
    },
    "zero_optimization": {
        "stage": 0
    },
    "gradient_accumulation_steps": 1,
    "gradient_clipping": 2.0,
    "steps_per_print": 2000,
    "train_batch_size": 4,
    "train_micro_batch_size_per_gpu": 4,
    "wall_clock_breakdown": false
}
